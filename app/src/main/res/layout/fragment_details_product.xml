<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:background="@color/amarillo_mercado"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_back"
                    app:tint="@color/black" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Descripcion"
                    android:textSize="18dp" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:gravity="center"
            android:id="@+id/tvTittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="6dp"
            android:text="Titulo Producto"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_producto"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:padding="3dp"
                        android:text="id Producto"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvAvariableQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:padding="3dp"
                        android:text="Cantidad actual"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvAvariableSold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:padding="3dp"
                        android:text="Cantidad en venta"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:padding="3dp"
                        android:text="Precio"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvCurrencyId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:padding="3dp"
                        android:text="Moneda"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvAcceptMercadoPago"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:padding="3dp"
                        android:text="Acepta Mercado Pago"
                        android:textSize="14dp" />
                </LinearLayout>

            </ScrollView>
        </LinearLayout>


    </LinearLayout>
</layout>